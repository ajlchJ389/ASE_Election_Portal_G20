@{
    ViewData["Title"] = "Voter Page";
    Layout = null; // Set the Layout property to null

}

<!DOCTYPE html>
<html>
<head>
    <style>
        /* CSS styles for the UserTypeSelection view */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            text-align: center;
        }

        .container {
            margin: 20px;
        }

        h1 {
            color: #333;
            font-size: 24px;
        }

        p {
            font-size: 18px;
            color: #555;
        }

        .user-type-options {
            display: flex;
            justify-content: center;
        }

        .user-type-option {
            margin: 10px;
            font-size: 20px;
        }

        .continue-button {
            background-color: navy;
            color: white;
            padding: 10px 20px;
            font-size: 20px;
            border: none;
            cursor: pointer;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Choose an Option</h1>
        <br /> <br />
        <p>Are you here to register or login?</p>
        <form method="post" action="/Account/SelectVoterOption">
            <div class="user-type-options">
                <label class="user-type-option">
                    <input type="radio" name="Voteroption" value="Register" /> Register
                </label>
                <label class="user-type-option">
                    <input type="radio" name="Voteroption" value="Login" /> Login
                </label>
                
            </div>
            <br />
            <button class="continue-button" type="submit">Continue</button>
        </form>
    </div>
</body>
</html>
