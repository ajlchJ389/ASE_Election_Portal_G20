@{
    ViewData["Title"] = "Check Status of your Application";
    Layout = null; // Set the Layout property to null

}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        /* Custom CSS for the form */
        body {
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .form-group {
            margin: 0;
            padding: 10px;
            display: flex;
            align-items: center;
        }

        label {
            font-weight: bold;
            width: 30%;
        }

        .form-control {
            width: 50%;
        }

        .text-center {
            text-align: center;
            justify-content: center;
        }

        .login-btn {
            background-color: navy;
            color: white;
            padding: 10px 30px;
            font-size: 20px;
            border: none;
            cursor: pointer;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        <h2 class="text-center">Candidate Status</h2>
        <form asp-action="CandidateSuccess" method="post">
            <div class="form-group">
                <label class="required" for="FirstName">First Name:</label>
                <input type="text" id="FirstName" name="FirstName" class="form-control" required />
            </div>

            <div class="form-group">
                <label class="required" for="LastName">Last Name:</label>
                <input type="text" id="LastName" name="LastName" class="form-control" required />
            </div>

            <div class="form-group">
                <label class="required" for="DOB">Date of Birth:</label>
                <input type="date" id="DOB" name="DOB" class="form-control" required />
            </div>
            <div class="form-group">
                <label class="required" for="Email">Email:</label>
                <input type="email" id="Email" name="Email" class="form-control" required />
                <div class="invalid-feedback">Please enter a valid email address.</div>

            </div>

            <div class="form-group">
                <label class="required" for="ContactNumber">Contact Number:</label>
                <input type="text" id="ContactNumber" name="ContactNumber" class="form-control" pattern="\d{10}" required placeholder="(123) 456-7890" />
                <div class="invalid-feedback">Please enter a 10-digit contact number.</div>

            </div>

            <div class="form-group text-center ">
                <button type="submit" class="login-btn">Check Status</button>
            </div>
        </form>
    </div>
</body>
</html>
