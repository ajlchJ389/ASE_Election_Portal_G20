@model List<ElectionResultsViewModel>

<h2>View Election Results</h2>

@using (Html.BeginForm("Index", "Votes", FormMethod.Post))
{
    <div class="form-group">
        <label for="electionId">Select Election:</label>
        <select class="form-control" id="electionId" name="electionId">
            @foreach (var election in ViewBag.Elections)
            {
                <option value="@election.ElectionID">@election.ElectionYear</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="stateId">Select State:</label>
        <select class="form-control" id="stateId" name="stateId">
            @foreach (var state in ViewBag.States)
            {
                <option value="@state.StateID">@state.StateName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">View Results</button>
}

@if (Model != null)
{
    <h3>Results:</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Candidate Name</th>
                <th>Number of Votes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.CandidateName</td>
                    <td>@result.NumberOfVotes</td>
                </tr>
            }
        </tbody>
    </table>
}
