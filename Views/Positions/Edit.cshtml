@model ASE_Election_Portal_G20.Models.Position

@{
    ViewData["Title"] = "Edit Position";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<div>
    <a asp-action="Index">Back to List</a>
    <h2 style="text-align: center">Edit Position Details</h2>
</div>
<hr />
<div class="row">
    <div class="center-align">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PositionId" />
            <div class="form-group d-flex">
                <label asp-for="PositionName" class="col-md-5 control-label required"></label>
            <div>
                    <input asp-for="PositionName" class="form-control" required />
                <span asp-validation-for="PositionName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex">
                <label asp-for="ElectionTypeId" class="col-md-5 control-label required"></label>
                <select asp-for="ElectionTypeId" class="form-control" asp-items="ViewBag.ElectionTypeId" required><option value=""> - Select Election Type - </option></select>
                <span asp-validation-for="ElectionTypeId" class="text-danger"></span>
            </div>
            <div style="text-align: center;margin-top:20px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

